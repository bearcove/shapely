{
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path_lookup": true
      },
      "initialization_options": {
        "cargo": {
          "buildScripts": {
            "enable": true
          }
        },
        "procMacro": {
          "enable": true
        },
        "check": {
          "command": "clippy",
          "features": "all"
        }
      }
    }
  }
}
