{
  "lsp": {
    "rust-analyzer": {
      "binary": {
        "path_lookup": true
      },
      "initialization_options": {
        "check": {
          "command": "clippy",
          "allTargets": true,
          "extraArgs": ["--all-features"]
        },
        "cargo": {
          "buildScripts": {
            "enable": true
          }
        },
        "procMacro": {
          "enable": true
        }
      }
    }
  }
}
